---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@400;700&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
    <h1 class="christmas-title">Offerfeest 2025 (afgelopen)</h1>
		<slot />
	</body>
</html>

<style is:global>
  body {
    background-image: url('/wallpaper-2.jpg');
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    min-height: 100vh;
    margin: auto;
    padding: 1.5rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 18px;
    font-family: "Noto Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  .christmas-title {
    font-family: "Mountains of Christmas", cursive;
    font-size: 4rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #FFD700;
    text-shadow: 3px 3px 6px rgba(0,0,0,0.5), 0 0 30px rgba(255,215,0,0.3);
    font-weight: 700;
  }

  @media (min-width: 640px) {
    .christmas-title {
      font-size: 5rem;
    }
  }

  .snowfall {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .snowfall-foreground {
    z-index: 100;
  }

  .snowfall-foreground .snowflake {
    background: rgba(255, 255, 255, 0.5);
  }

  .snowflake {
    position: absolute;
    top: -20px;
    background: linear-gradient(white, #fffacd);
    border-radius: 50%;
    filter: blur(1px);
    animation: snowfall linear infinite;
  }

  @keyframes snowfall {
    0% {
      transform: translateY(-100px) translateX(0) rotate(0deg);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) translateX(100px) rotate(360deg);
      opacity: 0;
    }
  }
</style>

